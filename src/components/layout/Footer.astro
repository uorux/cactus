---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pt-20 pb-4 text-center align-top font-semibold text-gray-600 sm:text-xs dark:text-gray-400"
>
	<div class="flex w-full flex-col items-center justify-center gap-y-2 sm:flex-row sm:justify-between">
		<div class="me-0 sm:me-4">
			&copy; {siteConfig.author}
			{year}.<span class="inline-block">&nbsp;{siteConfig.title}</span>
		</div>
		<nav
			aria-labelledby="footer_links"
			class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
		>
			<p id="footer_links" class="sr-only">More on this site</p>
			{
				menuLinks.map((link) => (
					<a class="hover:text-global-text px-4 py-2 hover:underline sm:py-0" href={link.path}>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
	<nav aria-label="upbring webring" class="flex items-center gap-x-4">
		<a class="hover:text-global-text hover:underline" href="https://kytrinh.me/ringfairy/rootydev/previous">&larr;</a>
		<a class="hover:text-global-text hover:underline" href="https://kytrinh.me/ringfairy/">upbring</a>
		<a class="hover:text-global-text hover:underline" href="https://kytrinh.me/ringfairy/rootydev/next">&rarr;</a>
  </nav>
	<nav aria-label="gathering webring" class="flex items-center gap-x-4">
		<a class="hover:text-global-text hover:underline" href="https://kytrinh.me/ringfairy/rootydev/previous">&larr;</a>
		<a class="hover:text-global-text hover:underline" href="https://kytrinh.me/ringfairy/">upbring</a>
		<a class="hover:text-global-text hover:underline" href="https://kytrinh.me/ringfairy/rootydev/next">&rarr;</a>
	</nav>
</footer>
